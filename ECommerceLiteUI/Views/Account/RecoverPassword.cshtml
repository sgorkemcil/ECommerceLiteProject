@using ECommerceLiteUI.Models
@model ProfileViewModel
@{
    ViewBag.Title = "RecoverPassword";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row margin-vert-30">
    <div class="col-md-12 col-md-offset-3 col-md-offset-3">
        @using (Html.BeginForm("RecoverPassword", "Account", FormMethod.Post,
            new { @class = "form-horizontal" }))
            {
            @Html.AntiForgeryToken()
            if (ViewBag.RecoverPasswordResult !=null)
            {
        <h4 class="text-center text-danger">
            @ViewBag.RecoverPasswordResult
        </h4>
            }
            if (ViewBag.RecoverPassword !=null)
            {
           <h4 class="text-center text-warning">
             @ViewBag.RecoverPassword
           </h4>
            }
            else
                {
                <div class="row">
                    <div class="login-header margin-bottom-30 col-md-6">
                        <h2 class="text-center">
                            Yeni Şifre Talep Edebilirsiniz.
                        </h2>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="input-group col-md-6 margin-bottom-20">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        @Html.TextBoxFor(x=> x.Email, new {@class="form-control",placeholder="Emailinizi yazını..."})
                        @Html.ValidationMessageFor(x=>x.Email)
                    </div>
                    <br />
                    <div class="form-group col-md-6">
                        <button type="submit" class="btn btn-default pull-right"
                                style="background-color:#D10024;color:white">
                            Şifre Talebini Gönder
                        </button>
                    </div>  
                </div>
                }
        }
       
    </div>
</div>
